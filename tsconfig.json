{
  "compilerOptions": {
    "target": "es2016",
    "jsx": "react-jsx",                                 
    "module": "commonjs",                     
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true, 
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
